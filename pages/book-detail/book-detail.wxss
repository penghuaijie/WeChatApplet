.tag-cmp {
  margin-right: 15rpx;
  margin-bottom: 10rpx;
}

.post {
  width: 690rpx;
    margin: 30rpx auto;
    height: 56rpx;
    background-color: #f5f5f5;
    border-radius: 15px;
    padding-left: 25rpx;
}


