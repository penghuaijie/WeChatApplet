  background-color: #eefbdd;
} */

.ex-tag1 {
  background-color: #fffbdd !important;
}

.ex-tag2 {
  background-color: #eefbdd !important;
}

.content-introduce {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  background-color: white;
  width: 690rpx;
  margin-bottom: 40rpx;
}

.content-introduce-title {
  margin-top: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #2f2f2f;
  margin-bottom: 20rpx;
}

.content-introduce-content {
  text-indent: 58rpx;
  font-weight: 500;
}


.book-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  background-color: white;
  width: 690rpx;
  /* margin-bottom: 40rpx; */
}

.book-info-title {
  margin-top: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #2f2f2f;
  margin-bottom: 20rpx;
}

.book-info-container {
  display: flex;
  flex-direction: row;
  width: 100%;
  font-size: 28rpx;
  margin-bottom: 100rpx;
}

.book-info-container-view {
  display: flex;
  flex-direction: column;
}

.description {
  margin-right: 30rpx;
  color: #999;
}

.post-container {
  position: fixed;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 690rpx;
  height: 100rpx;
  background-color: white;
  padding: 0 30rpx;
  bottom: 0;
  box-shadow: 1px -1px 1px #e3e3e3;
}

.post-fake {
  display: flex;
  flex-direction: row;
  width: 460rpx;
  height: 60rpx;
  border-radius: 35rpx;
  border-color: black;
  border: 1px solid #999;
  padding-left: 30rpx;
  align-items: center;
  font-size: 22rpx;
}

.like {
  margin-left: 30rpx;
}

.posting-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  width: 100%;
  position: fixed;
  bottom: 0;
  z-index: 999;
}

.posting-header {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: white;
  width: 690rpx;
  height: 100rpx;
  justify-content: space-between;
  border-bottom: 1px solid #f5f5f5;
  border-top: 1px solid #f5f5f5;
  padding: 0 30rpx;
}

.posting-header>text:first-child {
    font-size: 28rpx;
    color: #bbb;
}

.cancel {
  color: #666;
}

.posting-comments-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 40rpx 30rpx 0;
  width: 690rpx;
  background-color:white;
  flex-wrap: wrap;
}

